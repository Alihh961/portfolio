<section class="about-me-section">
    <div class="about-me-div">
        <h2>About Me</h2>
        <span class="h2-underline"></span>
        <p>I'm a <strong>full-stack web developer</strong> , dedicated to building sleek, user-friendly websites that
            deliver exceptional
            experiences.</p>
    </div>

    <div class="me-and-skills">
        <div class="me-div">
            <h3>Who I Am!</h3>
            <p>
                I specialize in both <strong> frontend </strong> and <strong> backend</strong> development, handling the
                visual and functional aspects of
                websites and web applications to ensure overall success. You can explore some of my projects in the
                Projects section.

                I'm actively seeking job opportunities where I can contribute, learn, and grow. If you have a suitable
                opportunity that aligns with my skills and experience, please don't hesitate to get in touch!
            </p>

            <button class="btn-pushable btn-contact" role="button">
                <span class="btn-shadow"></span>
                <span class="btn-edge"></span>
                <span class="btn-front text">
    Contact me
  </span>
            </button>

            <!--            <button class="btn-pushable btn-projects" role="button">-->
            <!--                <span class="btn-shadow"></span>-->
            <!--                <span class="btn-edge"></span>-->
            <!--                <span class="btn-front text">-->
            <!--    My Projects-->
            <!--  </span>-->
            <!--            </button>-->


        </div>

        <div class="skills-div">
            <h3>My Skills</h3>
            <div class="frontend">
                <span>SCSS</span>
                <span>JavaScript</span>
                <span>jQuery</span>
                <span>Angular</span>
                <span>Boostrap</span>
            </div>
            <div class="backend">
                <span>PHP</span>
                <span>Symphony</span>
                <span>NodeJS</span>
            </div>

            <div class="databases">
                <span>MYSQL</span>
                <span>MongoDB</span>
            </div>

            <div class="version-control">
                <span>Github</span>
            </div>

            <div class="design-tools">
                <span>Figma</span>
            </div>

            <div class="data-modeling-tools">
                <span>Looping</span>
            </div>


        </div>
    </div>


</section>

<section class="projects-section">

    <div class="projects-div">
        <h2>Projects</h2>
        <span class="h2-underline"></span>
    </div>

    <div class="projects-container">

        <% projects.forEach( (project, index)=>{ %>


            <% if( index % 2 === 0) { %>

                <div class=' project project-even project-<%= index %> left-side <%= project.state.toLowerCase() %>'>


                    <div class="image-container">
                        <img src='statics/assets/images/projects/<%= project.coverImage %>' alt='<%= project.name %>'>
                        <p><%= project.description %></p>

                    </div>
                    <div class="project-info">


                        <p><%= project.name %></p>

                        <% if(project.github) { %>
                            <% if(project.github.url) { %>

                                <a href="<%= project.github.url %>" target="_blank" class="btn-0">View code <i class="fa-brands fa-square-github"></i></a>

                            <% } else if(project.github.urlFront && project.github.urlBack ) {%>
                                    <a href="<%= project.github.urlFront %>" target="_blank" class="btn-0">View code - Front<i class="fa-brands fa-square-github"></i></a>
                                    <a href="<%= project.github.urlBack %>" target="_blank" class="btn-0">View code - Back<i class="fa-brands fa-square-github"></i></a>


                                <%}%>

                        <% } %>

                        <% if(project.url) { %>

                            <% if(project.url.url) { %>


                            <a href="<%= project.url.url %>" target="_blank" class="btn-0">Visit site</a>

                            <% }else if(project.url.urlFront && project.url.urlBack ){%>

                                    <a href="<%= project.url.urlFront %>" target="_blank" class="btn-0">Visit site - Client</a>
                                    <a href="<%= project.url.urlBack %>" target="_blank" class="btn-0">Visit site - Admin</a>

                                <%}%>

                        <% } %>
                    </div>

                </div>

            <% } else { %>
                <div class='project project-odd project-<%= index %> right-side <%= project.state.toLowerCase() %>'>


                    <div class="image-container">

                        <img src='statics/assets/images/projects/<%= project.coverImage %>' alt='<%= project.name %>'>
                        <p><%= project.description %></p>

                    </div>
                    <div class="project-info">


                        <p><%= project.name %></p>

                        <% if(project.github) { %>
                            <% if(project.github.url) { %>

                                <a href="<%= project.github.url %>" target="_blank" class="btn-0">View code<i class="fa-brands fa-square-github"></i></a>

                            <% } else if(project.github.urlFront && project.github.urlBack){%>
                                <a href="<%= project.github.urlFront %>" target="_blank" class="btn-0">View code - Front<i class="fa-brands fa-square-github"></i></a>
                                <a href="<%= project.github.urlBack %>" target="_blank" class="btn-0">View code - Back<i class="fa-brands fa-square-github"></i></a>


                            <%}%>

                        <% } %>

                        <% if(project.url) { %>

                            <% if(project.url.url) { %>


                                <a href="<%= project.url.url %>" target="_blank" class="btn-0">Visit site</a>

                            <% }else if(project.url.urlFront && project.url.urlBack ){%>

                                <a href="<%= project.url.urlFront %>" target="_blank" class="btn-0">Visit site - Client</a>
                                <a href="<%= project.url.urlBack %>" target="_blank" class="btn-0">Visit site - Admin</a>

                            <%}%>

                        <% } %>
                    </div>


                </div>
            <% } %>

        <% }) %>

    </div>

</section>
